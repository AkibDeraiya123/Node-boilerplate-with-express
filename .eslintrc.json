{
    "extends": "airbnb-base",
    "root": true,
    "env": {
	  "node": true,
	  "es6": true    	
    },
    "globals": {
  		"log": true
    },
    "rules": {
    	"indent": [2, "tab"],
        "no-tabs": 0,
  		"vars-on-top": 0,
		"max-len": [1],
		"quotes": [1, "double", { "avoidEscape": true, "allowTemplateLiterals": true }]
    }
}